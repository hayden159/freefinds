<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:textColor="@color/colorPrimaryDark"
    tools:context="osu.edu.freefinds.LandingPage">


    <TextView
        android:id="@+id/sorting_blurb"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_location" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_calendar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_calendar" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_pizza"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/pizza_piece" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_difficutly"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_difficulty" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_check"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_seen_it" />


    </LinearLayout>



    <fragment
        android:id="@+id/event_list"
        class="osu.edu.freefinds.EventListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"></fragment>


</android.support.design.widget.CoordinatorLayout>
