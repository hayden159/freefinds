<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:textColor="@color/colorPrimaryDark"
    tools:context="osu.edu.freefinds.LandingPage">


    <LinearLayout
        android:id="@+id/sorting_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_horizontal"
        tools:layout_editor_absoluteY="25dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_calendar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_calendar" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_difficutly"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_difficulty" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_upvote"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="6dp"
            app:srcCompat="@drawable/ic_seen_it" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_refresh"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:backgroundTint="@color/seablue"
        app:layout_anchor="@+id/sorting_buttons"
        app:layout_anchorGravity="right|center"
        app:srcCompat="@drawable/ic_refresh_" />


    <fragment
        android:id="@+id/event_list"
        class="osu.edu.freefinds.EventListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

    </fragment>




</android.support.design.widget.CoordinatorLayout>
